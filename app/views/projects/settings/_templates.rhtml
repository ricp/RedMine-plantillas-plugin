<table class="list">
	<thead><tr>
	<th><%= l(:label_template) %></th>
	<th><%= l(:label_template_status) %></th>
	<th></th>
	</tr></thead>
	<tbody>
<% for template in @templates %>
	<% unless template.new_record? %>
	<% next unless current_user_is_allowed_on_project?(template.project, :view_templates) %>
	<tr class="<%= cycle 'odd', 'even' %>">
    <td><%=h(template.name) %></td>
    <td><%= shared_template_label(template, @project_id) if template.shared? %></td>
    <td class="buttons">
    	<%= link_to_if_allowed_on_project template.project, l(:button_edit), { :controller => 'templates', :action => 'edit', :id => template , :project_id => template.project_id}, :class => 'icon icon-edit' %>
    	<%= link_to_if_allowed_on_project template.project, l(:button_delete), {:controller => 'templates', :action => 'destroy', :id => template, :project_id => template.project_id}, :method => :post, :class => 'icon icon-del' %>
    </td>
	</tr>
	<% end %>
<% end %>
    </tbody> 
</table>

<p><%= link_to_if_authorized l(:label_template_new),{ :controller => 'templates', :action => 'new', :project_id => @project_id }%></p>





